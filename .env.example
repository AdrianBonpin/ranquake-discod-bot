# Discord Bot Configuration
DISCORD_BOT_TOKEN=your_discord_bot_token_here
CLIENT_ID=your_discord_client_id_here

# Optional: For testing in a specific guild
GUILD_ID=your_guild_id_here
CHANNEL_ID=your_channel_id_here

# Mapbox API for earthquake maps
MAPBOX_API_KEY=your_mapbox_api_key_here

# Groq API for AI features
GROQ_API_KEY=your_groq_api_key_here

# Optional: Database path (defaults to ./data/db.sqlite in development, /app/data/db.sqlite in Docker)
# DB_PATH=/custom/path/to/db.sqlite

# Optional: Polling interval in minutes (defaults to 5)
# POLLING_INTERVAL_MINUTES=5
